<div class="container mt-3">
  <div class="row justify-content-center ml-3">
    <div class="col-sm-8 offset-sm-22">
      <article class="mb-3">
        <% @articles.each do |article| %>
          <h2>
            <%= link_to article.title, article, class: "text-decoration-none" %>
          </h2>
          <p>
            <%= article.content %>
          </p>
        <% end %>
      </article>
    </div>
  </div>
</div>
